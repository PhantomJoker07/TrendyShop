@using TrendyShop.ViewModels
@model AddViewModel

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Compra Venta (Artículo x)</title>


</head>

<body>


    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->

        <div class="row">
            <h3 class="col-lg-4 mt-4">@Model.Article.Name</h3>
            <a class="col-lg-10 mt-4 text-right" asp-action="AccountDetails" asp-controller="User" asp-route-userName="@Model.User.UserName">@Model.User.UserName</a>
            @*<a href="/User/Details" class="col-lg-10 mt-4 text-center"><h3>@Html.ActionLink(Model.User.UserName, "AccountDetails", "User", new { id = Model.User.UserName }, null)</h3></a>*@

        </div>

        <div class="row">
            <div class="col-lg-12 navbar-brand">Imagen del producto</div>
            <div class="col-lg-12">
                <img src="/images/img1.jpg" height="255" width="255">
            </div>
        </div>

        <!-- Article Info -->
        <div class="row">
            <div class="col-lg-11 mb-4">
                <h4 class="card-header my-4">Descripción:</h4>
            </div>

            <div class="col-lg-11 mb-4 card-body">
                <p class="card-text">
                    @Model.AddDescription
                </p>
            </div>

            <div class="col-lg-11 mb-4 card-footer my-4">
                <h3>Precio: @Model.Article.Price</h3>
            </div>
            <div class="col-lg-11 mb-4 card-footer my-4">
                <h3>Cantidad Disponible: @Model.Amount</h3>
            </div>

            <div class="col-lg-1 card-footer my-4">
                @*                <a href="" class="btn btn-primary">Comprar</a>*@
                @Html.ActionLink("Comprar", "Buy", "Buy", new { uid = @Model.UserName, aid = @Model.Article.ArticleId }, null)

            </div>

            <div class="col-lg-1 card-footer my-4">
                @Html.ActionLink("Editar", "Edit", "Add", new { aid = @Model.Article.ArticleId, uid = Model.UserName }, null)

            </div>

            <div class="col-lg-1 card-footer my-4">
                @Html.ActionLink("Eliminar", "Delete", "Add", new { aid = @Model.Article.ArticleId, uid = @Model.UserName }, null)

            </div>


            <div class="col-lg-1 card-footer my-4">

                <button @*class="ml-1"*@ type="button" data-toggle="modal" data-target="#nimodal">Carrito</button>
            </div>


            @*incompleto*@

        </div>
        <!-- /.row -->

    </div>

    <div class="modal fade" id="nimodal" tabindex="-1" role="dialog" aria-labelledby="AddToCartModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="AddToCartModalLongTitle">Cantidad:</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    @using (Html.BeginForm("AddToCart", "ShoppingCart", new { aid = @Model.Article.ArticleId, uid = @Model.UserName }))
                    {
                        <label for="amountToBuy"></label>
                        <input type="text" id="amountToBuy" name="amountToBuy" />

                        <input type="submit" value="Agregar" />
                    }

                </div>

                <div class="modal-footer">
                    <button class="red-button" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>



    <!-- /.container -->

</body>

</html>
