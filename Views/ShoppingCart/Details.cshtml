@model TrendyShop.ViewModels.SLDetailsViewModel


@{
    ViewData["Title"] = "Details";
}




<div class="col-lg-8 mb-4 mx-auto mt-4">
    <div class="card ">
        <h2 class="card-header">
            @Model.ShoppingListName
        </h2>
        <div class="card-body">
            <table class="table table-bordered mb-4">
                <tr>
                    <th>Artículo</th>
                    <th>Marca</th>
                    <th>Cantidad</th> 
                    <th>Precio</th>
                    

                </tr>
                @foreach (var art in Model.List)
                {
                    <tr>
                        <td>@art.Article.Name</td>
                        <td>@art.Article.Brand</td>
                        <td>@art.Amount</td>
                        <td>@art.Article.Price$</td>
                       
                    </tr>
                }
            </table>
            <div class="d-flex">
                @Html.ActionLink("Cargar Lista", "LoadShoppingList", "ShoppingCart", new { sid = Model.ShoppingListId }, new { @class = "ml-auto" })
            </div>
        </div>

    </div>
</div>
