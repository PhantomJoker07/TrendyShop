@using TrendyShop.ViewModels

@*@model IEnumerable<Add>*@
@model AddIndexViewModel

<!DOCTYPE html>
<html lang="en">

<body>

    <!-- Page Content -->
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->

        <div class="row">

            <h1 class="col-lg-4 mt-4 mb-3">
                Artículos
            </h1>
            <div class="col-lg-2"></div>
            <input type="search" class="form-control col-lg-4 mt-4 mb-3" id="name">
            <a class="col-lg-1 btn btn-dark mt-4 mb-3 ml-1 text-white">Buscar</a>

        </div>

        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Inicio</a>
            </li>
            <li class="breadcrumb-item active">Artículos</li>
        </ol>

        <!-- Content Row -->
        <div class="row">
            <!-- Sidebar Column -->
            <div class="col-lg-3 mb-4">
                <div class="card">
                    <div class="card-body">
                        <ul class="navbar-nav flex-column">
                            <li class="card-title border-bottom h2">
                                Filtrar por...
                            </li>
                            <li class="nav-item">
                                <a href="" class="nav-link"><i class="fas fa-dollar-sign"></i> Precio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="#" data-toggle="collapse" aria-expanded="false" data-target="#submenu-1" aria-controls="submenu-1"><i class="fas fa-chart-bar"></i> Categoría <span class="badge badge-success"></span></a>
                                <div id="submenu-1" class="collapse submenu" style="">
                                    <ul class="nav flex-column">
                                        @foreach (Category cat in Model.Categories)
                                        {
                                            <li class="nav-item mb-1 ml-4">
                                                @Html.ActionLink(cat.Name, "Index", "Add", new { categoryId = cat.CategoryId })
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-toggle="collapse" aria-expanded="false" data-target="#submenu-1-1" aria-controls="submenu-1-1"><i class="fas fa-gift"></i> Condición</a>
                                <div id="submenu-1-1" class="collapse submenu" style="">
                                    <ul class="nav flex-column">
                                        <li class="nav-item mb-1 ml-4">
                                            @Html.ActionLink("Nuevo", "Index", "Add", new { isNew = "true" })
                                        </li>
                                        <li class="nav-item mb-1 ml-4">
                                            @Html.ActionLink("De Uso", "Index", "Add", new { isNew = "false" })
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-9 mb-4">
                <h2>Lista de Artículos</h2>

                @foreach (Add a in Model.Adds)
                {
                    <div class="col-lg-12 mb-4">
                        <div class="card h-100">
                            <div class="card-body" @*style="background-color:rgb(246, 246, 255)"*@>
                                <img src="~/images/@a.Article.Image" height="200" width="300" />
                                <h4 class="card-title border-bottom">@a.Article.Name</h4>

                                <div class="d-flex">
                                    <h5> <i class="fas fa-money-bill-alt"></i> Precio: @a.Article.Price$</h5>
                                    <h5 class="ml-2"><i class="fas fa-certificate"></i> Marca: @a.Article.Brand</h5>
                                </div>
                                <p class="card-text">@a.Article.Description</p>

                                <div class="d-flex">
                                    <div class="ml-auto">
                                        @Html.ActionLink("Ver Anuncio...", "Details", "Add", new { id = a.ArticleId }, null)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            @*<div class="col-lg-1 card-footer my-4">
                    @Html.ActionLink("Nuevo Anuncio", "NewAdd", "Add", null)

                </div>*@
        </div>

    </div>
    <!-- /.container -->
    <!-- Bootstrap core JavaScript -->

</body>

</html>


