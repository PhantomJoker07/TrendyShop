@model TrendyShop.ViewModels.ChangePasswordViewModel
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "ChangePassword";
}

<div class="col-lg-4 mx-auto mt-5">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title border-bottom">Cambiar contraseña</h3>
            <form asp-action="SaveChangedPassword" asp-controller="User">

                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentPassword)
                    <input type="password" asp-for="CurrentPassword" class="form-control" id="input1" required data-validation-required-message="Debe especificar una contraseña.">
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    @if (Model.WrongPassword)
                    {
                        <div class="text-danger">Contraseña incorrecta</div>
                    }
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword)
                    <input type="password" asp-for="NewPassword" class="form-control" id="input2" required data-validation-required-message="Debe especificar una contraseña.">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                @Html.HiddenFor(m => m.UserId)
                <div class="text-center">
                    <button class="btn btn-secondary" type="submit">Guardar</button>
                </div>
            </form>

        </div>
       
    </div>
</div>