                @foreach (var art in Model)
                {

                    <tr>
                        <td>@art.Name</td>
                        <td>@Html.ActionLink("Cargar", "LoadShoppingList", "ShoppingCart", new { sid = art.ShoppingListId })</td>
                        <td>@Html.ActionLink("Eliminar", "DeleteShoppingList", "ShoppingCart", new { sid = art.ShoppingListId })</td>
                        <td>@Html.ActionLink("Detalles", "Details", "ShoppingCart", new { sid = art.ShoppingListId })</td>

