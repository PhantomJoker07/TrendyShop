@using TrendyShop.ViewModels
@model AuctionViewModel
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="en">

<body>
    <!-- Page Content -->
    *@{
        TimeSpan elapsed = DateTime.Now - Model.Start;
        TimeSpan remaining = Model.Duration - elapsed;
        if (elapsed > Model.Duration) remaining = new TimeSpan(0);
    }
    <div class="col-lg-7 mx-auto mt-4">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title border-bottom">@Model.Name</h3>

                <div class="d-flex">
                    <img src="~/images/@Model.Article.Image" class="img-fluid rounded" height="200" width="300" />
                    <div class=" ml-2 flex-column">

                        <h3>@Model.Article.Name</h3>
                        <p class="card-text">@Model.Article.Description</p>
                    </div>
                </div>
                <div class="d-flex mt-4">
                    @if (Model.IsFinished)
                    {
                        <p title="Fecha"><i class="far fa-calendar-check"></i> @Model.Start.ToString("dd/MM/yy")</p>
                    }
                    else
                    {
                        <p title="Fecha"><i class="far fa-calendar-alt"></i> @Model.Start.ToString("dd/MM/yy")</p>
                    }
                    <p title="Hora de inicio" class="ml-2"><i class="far fa-clock"></i> @Model.Start.ToString("hh:mm tt")</p>
                    <p  title="Tiempo estante" class="ml-2"><i class="fas fa-hourglass-end"></i> @remaining</p>
                    <h5 title="Participantes" class="ml-2"><i class="fas fa-users"></i> 150</h5> @*--------Pendiente Implementacion!!!!!------*@

                </div>
                @if (Model.IsFinished)
                {
                    <h5>Vendido a: [nombre] </h5> @*--------Pendiente Implementacion!!!!!------*@

                }
                else if (false) /*---------Si está en curso---------*/
                {
                    <h5 class="mb-0">Licitador en cabeza: Amalia </h5> @*--------Pendiente Implementacion!!!!!------*@
                }
                <div class="d-flex">
                    <h5 class="btn btn-secondary mt-0">Precio Inicial: @Model.Price$</h5>
                    @if (Model.IsFinished)
                    {
                        <h5 class="ml-2">Precio Final: @Model.Price$</h5> @*--------Pendiente Implementacion!!!!!------*@
                    }
                    else if (false) /*---------Si está en curso---------*/
                    {
                        <h5 class="ml-2 btn btn-secondary mt-0">Precio Actual: @Model.Price$</h5> @*--------Pendiente Implementacion!!!!!------*@
                    }
                </div>
                <div class="list-group-item">
                    @if (SignInManager.IsSignedIn(User)) //Only a logged user can participate ---------No deberia chequear que la subasta esté en curso? -----
                    {
                        <h3>Cantidad</h3>
                        <div class="d-flex form-group">
                            <input class="mt-0" required="" data-validation-required-message="Por favor introduzca una cantidad" type="text">
                            <a href="" class="btn btn-dark ml-2">Pujar</a>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</body>

</html>
